pipeline {
    agent none

    stages {
        // esta fase no se ejecuta porque no tiene un agent definido 
        stage('Limpiar Workspace') {
            steps {
                // usando el int√©rprete de comandos pwsh
                pwsh 'Remove-Item -Path ./*'
            }
        }

        stage('Crear el fichero') {
            // definimos un nodo en que esta fase debe ejecutarse
            agent any

            steps {
                sh 'ls'
            }
        }
    }
}